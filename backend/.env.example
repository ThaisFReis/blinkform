# Database
DATABASE_URL="postgresql://username:password@localhost:5432/blinkform"

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Redis (optional - for Railway Redis service)
REDIS_HOST=localhost
REDIS_PORT=6379

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Mint Authority (JSON array format: [12, 44, ...])
MINT_AUTHORITY_PRIVATE_KEY=

# Collection Authority (optional, defaults to MINT_AUTHORITY)
COLLECTION_AUTHORITY_PRIVATE_KEY=

# Default royalty percentage (basis points, 500 = 5%)
DEFAULT_ROYALTY_BPS=500

# Base URL for Actions endpoints (used in links.next callbacks)
BASE_URL=http://localhost:3000

# Demo mode - when true, all form steps return mock responses without requiring transactions
DEMO_MODE=false

# Railway
PORT=3000