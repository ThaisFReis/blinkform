generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  runtime = "nodejs"
}

datasource db {
  provider = "postgresql"
}

model Form {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  creatorAddress String       @map("creator_address") @db.VarChar(44)
  title          String       @db.Text
  description    String?      @db.Text
  schema         Json         @db.JsonB
  isActive       Boolean      @default(true) @map("is_active")
  createdAt      DateTime     @default(now()) @map("created_at") @db.Timestamptz
  submissions    Submission[]
}

model Submission {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  formId               String   @map("form_id") @db.Uuid
  form                 Form     @relation(fields: [formId], references: [id])
  userAccount          String   @map("user_account") @db.VarChar(44)
  answers              Json     @db.JsonB
  transactionSignature String?  @map("transaction_signature") @db.VarChar(88)
  completedAt          DateTime @default(now()) @map("completed_at") @db.Timestamptz
}
